<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CareerConnect - Learning Hub</title>
    <link rel="stylesheet" href="../styles/learningHub.css">
    <link rel="stylesheet" href="../styles/nagivation.css">
</head>
<body>
     <%- include('partials/navigation') %>
     <section  class="main_content" id="mainContent">
        <%- include('partials/topbar') %>
        <section class="site-wrapper">
            <section class="main-content">
                <section class="intro">
                    <h2>Learning Hub</h2>
                    <p>Explore courses and resources to enhance your skills and career prospects.</p>
                    <section class="search-bar">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                        </svg>
                        <input type="search" placeholder="search for courses or skills...">
                    </section>
                </section>

                <section class="featured-courses">
                    <h3>Featured Courses</h3>
                    <section class="course-grid">
                        <% if (courses && courses.length > 0) { %>
                            <% courses.forEach(course => { %>
                                <article class="course-card">
                                    <section>
                                        <img src="../../visuals/<%= course.image %>" alt="<%= course.title %>">
                                    </section>
                                    <section class="course-info">
                                        <h4><%= course.title %></h4>
                                        <p><%= course.description %></p>
                                        <span><%= course.duration %></span>
                                    </section>
                                    <section class="course-actions">
                                        <a href="<%= course.courseLink %>" target="_blank" class="btn btn-primary">ðŸ“š Course Link</a>
                                        <a href="/service/quiz/<%= course._id %>" class="btn btn-success">ðŸ§  Take Quiz</a>
                                    </section>
                                </article>
                            <% }); %>
                        <% } else { %>
                            <p>No courses available at the moment.</p>
                        <% } %>
                    </section>
                </section>

               


                        <!-- Add other certificates similarly -->
                    </section>
                </section>
            </section>
        </section>
     </section>
    <script src="../scripts/sidebar.js"></script>
</body>
</html>
