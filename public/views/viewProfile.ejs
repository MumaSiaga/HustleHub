<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/serviceProfile.css">
    <link rel="stylesheet" href="/styles/nagivation.css">
</head>
<body>

     <%- include('partials/nav') %>
    <section class="main_content" id="mainContent">
        <%- include('partials/bar') %>
        <section class="profile_section">
            <section class="profile">
                <img src="../../visuals/user_profile.webp" class="profile_pic">
                <section>
                <h3><%=user.username%></h3>
                <p><%=user.location%></p>
                </section>
            </section>
        </section>

        <nav class="navbar">
 
        </nav>

        <section class="content">
            <section class="main">
                <section class="card about">
                    <h2>About</h2>
                    <p><%=user.about%></p>
                </section>

                <section class="card skills">
                <h2>Skills</h2>
    <% if (user.skills && user.skills.length > 0) { %>
    <% 
      // Split the first element of the array (the long string) by commas
      let skillsArray = user.skills[0].split(','); 
      skillsArray.forEach(skill => { 
    %>
      <span class="skill"><%= skill.trim() %></span>
    <% }); %>
  <% } else { %>
    <p>No skills listed yet.</p>
  <% } %>

                </section>
            </section>

        <aside class="sidebar">
            <section class="card">
            <h2>Certifications</h2>
            <% if (user.certifications && user.certifications.length > 0) { %>
                <ul>
                    <% user.certifications.forEach(cert => { %>
                        <li><%= cert %></li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No certifications listed yet.</p>
            <% } %>
            </section>
        </aside>
        </section>
    </section>
    <script src="../scripts/sidebar.js"></script>
</body>
</html>