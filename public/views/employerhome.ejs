<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="../styles/nav.css">
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <style>
        :root {
            --primary-color: #1173d4;
            --secondary-color: #e0effc;
            --background-color: #f8faff;
            --text-primary: #1a202c;
            --text-secondary: #5c6b8a;
            --accent-color: #1173d4;
        }
        body {
            font-family: "Inter", sans-serif;
            background-color: var(--background-color);
            color: var(--text-primary);
        }
        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>

    <section class="main_content" id="mainContent">
        <%- include('partials/bar') %>

        <main class="flex-1 p-8 ml-0">
            <div class="flex items-center justify-between mb-8">
  <h1 class="text-3xl font-bold text-[var(--text-primary)]">Dashboard</h1>
  
  <form action="/logout" method="POST">
    <button type="submit" class="flex items-center gap-2 text-black-600 hover:text-red-800">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" 
           stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" 
              d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 
                 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 
                 0 0 0 7.5 21h6a2.25 2.25 
                 0 0 0 2.25-2.25V15M12 9l-3 
                 3m0 0 3 3m-3-3h12.75" />
      </svg>
      Logout
    </button>
  </form>
</div>




            <!-- Stats Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 mb-8">
                <div class="bg-white rounded-md shadow-sm p-6 border border-gray-200 card-hover">
                    <p class="text-base font-medium text-[var(--text-secondary)]">Active Jobs</p>
                    <p class="text-3xl font-bold text-[var(--text-primary)] mt-2"><%= jobs ? jobs.length : 0 %></p>
                </div>
                <div class="bg-white rounded-md shadow-sm p-6 border border-gray-200 card-hover">
                    <p class="text-base font-medium text-[var(--text-secondary)]">Applications Received</p>
                    <p class="text-3xl font-bold text-[var(--text-primary)] mt-2"><%= jobs && jobs.length ? jobs.reduce((sum, j) => sum + j.applicants.length, 0) : 0 %></p>
                </div>
            </div>


            <!-- Smart Suggestions -->
            <div class="mb-8">
                <h2 class="text-2xl font-semibold text-[var(--text-primary)] mb-4">Smart Suggestions</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                    <% if (smartSuggestions && smartSuggestions.length > 0) { %>
                        <% smartSuggestions.forEach(f => { %>
                        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 text-center card-hover">
                            <img 
                            class="w-24 h-24 rounded-full object-cover border-2 border-[var(--primary-color)] mx-auto mb-4"
                            src="<%= f.avatar || 'https://via.placeholder.com/150' %>" 
                            alt="<%= f.username %>"
                            />
                            <p class="text-lg font-medium text-[var(--text-primary)]"><%= f.username %></p>
                            <p class="text-base text-[var(--text-secondary)]">
                            <%= f.skills.length > 0 ? f.skills.join(', ') : 'No skills listed' %>
                            </p>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-[var(--text-secondary)]">No smart suggestions available yet.</p>
                    <% } %>
                    </div>

            </div>

            <!-- Quick Hire Actions -->
            <div>
                <h2 class="text-2xl font-semibold text-[var(--text-primary)] mb-4">Hire Actions</h2>
                <div class="flex flex-wrap gap-4">
                    <a href="/employer/applicants">
                        <button class="bg-[var(--secondary-color)] text-[var(--primary-color)] px-6 py-3 rounded-md hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] focus:ring-opacity-50 transition-colors duration-200">
                            View All Applications
                        </button>
                    </a>
                </div>
            </div>
        </main>
    </section>

    <script src="../scripts/bar.js"></script>
</body>
</html>
